// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ผู้ใช้งาน
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  records Record[]
  budgets Budget[]
  debts   Debt[]
}

// รายรับ-รายจ่าย
model Record {
  id          String   @id @default(cuid())
  type        String   // income = รายรับ, expense = รายจ่าย
  amount      Float
  category    String   // หมวดหมู่ เช่น อาหาร, เดินทาง, เงินเดือน
  description String   // รายละเอียด
  date        DateTime
  note        String?  // หมายเหตุ (ไม่บังคับ)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String

  user User @relation(fields: [userId], references: [id])
}

// งบประมาณรายหมวดหมู่
model Budget {
  id        String   @id @default(cuid())
  category  String   // หมวดหมู่ เช่น อาหาร, เดินทาง
  amount    Float    // งบที่ตั้งไว้ (บาท/เดือน)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, category])
}


// บันทึกหนี้ (ยืม/ให้ยืมเงิน)
model Debt {
  id          String   @id @default(cuid())
  type        String   // borrow = ยืมเงิน, lend = ให้ยืมเงิน
  amount      Float
  person      String   // ชื่อคนที่ยืมหรือให้ยืม
  description String   // รายละเอียด
  date        DateTime
  note        String?
  status      String   // unpaid = ยังไม่คืน, paid = คืนแล้ว
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String

  user User @relation(fields: [userId], references: [id])
}
